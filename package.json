{
  "name": "copy-as-markdown",
  "version": "2.0.0",
  "description": "Copy Link or Image as Markdown code, a Web Extension",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "npm run clean && npm run build-chrome && npm run build-firefox",
    "build-chrome": "zip -r build/chrome.zip src/",
    "build-firefox": "npx web-ext build -s src/ -a build/",
    "eslint": "eslint .",
    "clean": "rm -rf ./build/*",
    "convert-images": "./utils/convert-images.sh"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/chrome": "^0.0.183",
    "@types/jest": "^28.1.0",
    "clipboardy": "^2.3.0",
    "eslint": "^8.9.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.18.2",
    "jest": "^28.1.0",
    "jest-environment-node": "^28.1.0",
    "puppeteer": "^14.2.1",
    "typescript": "^2.9.2"
  }
}
