{
    "env": {
        "browser": true,
        "webextensions": true,
        "es6": true,
        "mocha": true
    },
    "extends": "airbnb-base",
    "parserOptions": {
        "sourceType": "module",
        "ecmaVersion": 2020
    },
    "ignorePatterns": ["firefox/dist", "chrome/dist", "firefox-mv3/dist", "**/vendor/", "e2e_test/**/*", "dist/**/*"],
    "rules": {
        "no-console": 0,
        "import/extensions": [
            "error", "always"
        ]
    },
    "overrides": [
        {
            "files": ["*.ts", "*.tsx"],
            "parser": "@typescript-eslint/parser",
            "parserOptions": {
                "project": "./tsconfig.json"
            },
            "extends": [
                "airbnb-base",
                "airbnb-typescript/base"
            ],
            "plugins": ["@typescript-eslint"],
            "rules": {
                "no-console": 0,
                "@typescript-eslint/no-unused-vars": ["error", { "argsIgnorePattern": "^_" }],
                "import/extensions": [
                    "error",
                    "never",
                    {
                        "js": "always"
                    }
                ]
            }
        }
    ]
}
